{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "skipLibCheck": true,
    "esModuleInterop": true,
     "lib": ["ES2022", "DOM"]
  },
  "include": ["src", "scripts"]
}
